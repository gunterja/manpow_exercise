<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

    <% @posts.each do |post| %>
      <div class="">
        <h2><%= post.title %></h2>
        <p><%= post.body %></p>
        <br>
        <%= link_to 'Show', blog_post_path(post.blog, post) %>
        <%= link_to 'Edit', edit_blog_post_path(post.blog, post) %>
        <%= link_to 'Destroy', [post.blog, post], method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

<br>

<%= link_to 'New Post', new_blog_post_path %>
